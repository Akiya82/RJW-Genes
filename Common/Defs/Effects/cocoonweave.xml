      <shaderParameters>
        <_NumFrames>5</_NumFrames>
        <_FramesPerSec>7.5</_FramesPerSec>
      </shaderParameters>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="MoteBase">
    <defName>Mote_CocoonStencil</defName>
    <thingClass>MoteAttached</thingClass>
    <altitudeLayer>Terrain</altitudeLayer>
