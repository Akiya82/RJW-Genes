		<iconPath>Things/Mote/Heart</iconPath>
		<prerequisite>rjw_genes_lifeforce</prerequisite>
		<displayOrderInCategory>3</displayOrderInCategory>
		<displayCategory>rjw_genes_fertilin</displayCategory>
